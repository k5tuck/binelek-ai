# Server Configuration
API_HOST=0.0.0.0
API_PORT=8098
ENVIRONMENT=development

# MLFlow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=binelek-ml
MLFLOW_ARTIFACT_ROOT=./mlruns

# Database Connections
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# PostgreSQL - Dedicated binah_ml database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=binah_ml
POSTGRES_USER=binah
POSTGRES_PASSWORD=your_postgres_password

# JWT Authentication (shared with binah-auth)
JWT_SECRET=your-super-secret-key-change-this-in-production-at-least-32-characters-long
JWT_ISSUER=Binah.Auth
JWT_AUDIENCE=Binah.Platform
JWT_ALGORITHM=HS256

# Training Configuration
AUTO_RETRAIN=false
RETRAIN_SCHEDULE=0 2 * * *  # 2 AM daily

# Model Registry
MODEL_REGISTRY_PATH=./models

# Tenant Isolation
ENABLE_TENANT_ISOLATION=true

# Logging
LOG_LEVEL=INFO
